generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

//Models

model User {
  id         String  @id
  firstName  String
  lastName   String
  middleName String?
  suffix     String?

  email     String   @unique
  image     String?
  role      String
  createdAt DateTime
  updatedAt DateTime

  @@unique([firstName, lastName])
}
